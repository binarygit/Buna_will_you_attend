<main class="container">
  <section class='show-event-card'>
    <h1><%= @event.title %></h1>
    <p>description: <%= @event.description %></p>
    <p>created by: <%= @event.user.username %></p>
    <p>event date: <%= @event.date %></p>
    <p>venue: <%= @event.venue %></p>
    <% if @event.attendance %>
      <p class='happy-message'>Mamu loves you so much!</p>
    <% else %>
      <p class='sad-message'>You are a great disappointment. I regret sending you an Iphone.</p>
    <% end %>
  </section>

  <% if buna? %>
    <section class='attendance-form-wrapper'>
      <h2>Will Buna attend?</h2>

      <%= form_with model: @event do |f| %>
        <%= f.submit 'Ofcourse, I will Attend!', class: 'big-border-on-focus' %>
        <%= f.submit 'Sorry, mamu does not love you enough', class: 'big-border-on-focus' %>
      <% end %>
    </section>
  <% end %>
</main>
